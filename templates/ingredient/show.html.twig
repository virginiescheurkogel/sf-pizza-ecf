{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Détails Ingredient</h1>

    <br><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id :</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ ingredient.ingredientName }}</td>
            </tr>
            <tr>
                <th>Tarif :</th>
                <td>{{ ingredient.ingredientPrice }} €</td>
            </tr>
            <tr>
                <th>Végétarien :</th>
                <td>{{ ingredient.vegetarian ? 'oui' : 'non' }}</td>
            </tr>
            <tr>
                <th>Végan :</th>
                <td>{{ ingredient.vegan ? 'oui' : 'non' }}</td>
            </tr>
        </tbody>
    </table>

    <!--<a href="{{ path('ingredient_index') }}">back to list</a>-->


    <div class="flex">
        <div><a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-warning btn-block">Modifier</a></div>
        {{ include('ingredient/_delete_form.html.twig') }}
    </div>

{% endblock %}
