{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block body %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ingredient_name</th>
                <th>Ingredient_price</th>
                <th>Vegetarian</th>
                <th>Vegan</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.ingredientName }}</td>
                <td>{{ ingredient.ingredientPrice }}</td>
                <td>{{ ingredient.vegetarian ? 'Yes' : 'No' }}</td>
                <td>{{ ingredient.vegan ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('ingredient_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ingredient_new') }}">Create new</a>
{% endblock %}
