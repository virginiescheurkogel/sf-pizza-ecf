{% extends 'base.html.twig' %}

{% block title %}Pizza{% endblock %}

{% block body %}
    <h1>Détails Pizza</h1>

    <br><br>

    <table class="table">
        <tbody>
            <tr>
                <th>Id :</th>
                <td class="col-md-6">{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td class="col-md-6">{{ pizza.pizzaName }}</td>
            </tr>
            <tr>
                <th>Tarif :</th>
                <td class="col-md-6">{{ pizza.pizzaPrice }} €</td>
            </tr>
            <tr>
                <th>Taille :</th>
                <td class="col-md-6">{{ pizza.pizzaSize.getSizeName() }}</td>
            </tr>
        </tbody>
    </table>

    <br><br>

    <table class="table">
        <tbody>
            <tr>
                <th>INGREDIENTS :</th>
            </tr>
            {% for ingredient in pizza.pizzaIngredients %}
                <tr>
                    <td class="col-md-6">
                        {{ ingredient.ingredientName }}
                    </td>
                    <td class="col-md-6">
                        {{ ingredient.ingredientPrice }} €
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!--<a href="{{ path('pizza_index') }}">Retour à la liste</a>-->


    <div class="flex">
        <div><a href="{{ path('pizza_edit', {'id': pizza.id}) }}" class="btn btn-warning btn-block">Modifier</a></div>

        {{ include('pizza/_delete_form.html.twig') }}
    </div>


{% endblock %}
